<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="basic">
        <field name="id" type="hidden" />
        <field name="title" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" class="inputbox" required="true" />
        <field name="alias" type="text" id="alias" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
        
        <field name="language" type="language" label="COM_AVISAMUSICDB_MUSICS_LANGUAGE_LABEL">
			<option value="*">COM_AVISAMUSICDB_MUSICS_LANGUAGE_ALL</option>
		</field>
        <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" default="1" />
        <field name="published" type="list" label="JSTATUS" filter="intval" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
    </fieldset>
</form>
	
